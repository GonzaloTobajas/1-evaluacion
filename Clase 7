#TE pregunta la hora y te saluda en funcion de la hora
while True:
    hora=int(input("¿Cual crees que será la hora de tu muerte?: "))
    if hora<=14 and hora>5:
        print("Buenos días")
        break
    if hora<=20 and hora>14:
        print("Buenas tardes")
        break
    if hora<=5 or (hora>20 and hora<24):
        print("Buenas noches")
        break
    if hora>24:
        print("Ni puta gracia, dime una hora de verdad")

#TE pregunta la hora y te saluda en funcion de la hora
def saludar():
    hora=int(input("Dime que hora es: "))
    if hora<=0 or hora>=24:
        print("Eso eta' mah")
    else:
        if hora>=6 and hora<=12:
            print("Buenoh díah")
        else:
            if hora>12 and hora<20:
                print("Buenah tardeh")
            else:
                print("Buenah nocheh")
saludar()

#TE pregunta la hora y te saluda en funcion de la hora
seguir=True
while seguir==True:
    hora=int(input("¿Qué hora es?: "))
    if hora<=14 and hora>5:
        print("Buenos días")
        seguir=False
    if hora<=20 and hora>14:
        print("Buenas tardes")
        seguir=False
    if hora<=5 or (hora>20 and hora<24):
        print("Buenas noches")
        seguir=False
    if hora>24:
        print("¡Dime una hora de verdad!")
        seguir=True
